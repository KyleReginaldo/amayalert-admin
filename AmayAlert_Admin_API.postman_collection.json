            "body": {
              "mode": "raw",
              "raw": "{\n  \"title\": \"Updated Flash Flood Warning\",\n  \"content\": \"Flash flood warning has been lifted. Roads are now passable.\",\n  \"alert_level\": \"low\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/alerts/1",
              "host": ["{{baseUrl}}"],
              "path": ["api", "alerts", "1"]
            }
