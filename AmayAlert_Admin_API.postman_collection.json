  "item": [
    {
      "name": "Alerts",
      "item": [
        {
          "name": "Get All Alerts",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/api/alerts",
              "host": ["{{baseUrl}}"],
              "path": ["api", "alerts"]
