    {
      "name": "Test Scenarios",
      "item": [
        {
          "name": "Emergency Workflow - Create Alert + Evacuation + SMS",
          "item": [
            {
              "name": "1. Create Emergency Alert",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"title\": \"Typhoon Pepito Warning\",\n  \"content\": \"Typhoon Pepito is approaching. Signal No. 3 has been raised. All residents in low-lying areas should evacuate immediately.\",\n  \"alert_level\": \"critical\"\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/api/alerts",
                  "host": ["{{baseUrl}}"],
                  "path": ["api", "alerts"]
                }
              }
            },
            {
              "name": "2. Create Evacuation Center",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"name\": \"Emergency Typhoon Evacuation Center\",\n  \"address\": \"Barangay Hall, Poblacion District\",\n  \"latitude\": 14.5995,\n  \"longitude\": 120.9842,\n  \"capacity\": 300,\n  \"current_occupancy\": 0,\n  \"status\": \"open\",\n  \"contact_name\": \"Maria Santos\",\n  \"contact_phone\": \"+639171234567\"\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/api/evacuation",
                  "host": ["{{baseUrl}}"],
                  "path": ["api", "evacuation"]
                }
              }
            },
            {
              "name": "3. Send Emergency SMS",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"to\": \"+639123456789\",\n  \"message\": \"TYPHOON PEPITO ALERT: Signal No. 3 raised. Evacuate to Barangay Hall, Poblacion District immediately. Contact +639171234567 for assistance.\"\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/api/sms",
                  "host": ["{{baseUrl}}"],
                  "path": ["api", "sms"]
                }
              }
            }
          ]
        },
        {
          "name": "Rescue Operation Workflow",
          "item": [
            {
              "name": "1. Citizen Reports Emergency",
              "request": {
                "method": "POST",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"title\": \"Family trapped by landslide\",\n  \"description\": \"A family of 4 is trapped in their house due to a landslide blocking all exits. They are safe but cannot get out.\",\n  \"priority\": 1,\n  \"lat\": 14.6542,\n  \"lng\": 121.0322,\n  \"user\": \"citizen-user-789\",\n  \"metadata\": {\n    \"reportedVia\": \"mobile_app\",\n    \"contactNumber\": \"+639456789123\"\n  }\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/api/rescues",
                  "host": ["{{baseUrl}}"],
                  "path": ["api", "rescues"]
                }
              }
            },
            {
              "name": "2. Admin Acknowledges & Starts Operation",
              "request": {
                "method": "PUT",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"status\": \"in_progress\",\n  \"scheduled_for\": \"2025-10-08T16:00:00Z\",\n  \"metadata\": {\n    \"notes\": \"Beta team dispatched with heavy machinery. ETA 30 minutes.\",\n    \"lastUpdatedBy\": \"admin\",\n    \"teamAssigned\": \"Beta Rescue Squad\",\n    \"equipment\": [\"excavator\", \"medical_kit\", \"communication_radio\"]\n  }\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/api/rescues/RESCUE_ID_FROM_STEP_1",
                  "host": ["{{baseUrl}}"],
                  "path": ["api", "rescues", "RESCUE_ID_FROM_STEP_1"]
                }
              }
            },
            {
              "name": "3. Complete Rescue Operation",
              "request": {
                "method": "PUT",
                "header": [
                  {
                    "key": "Content-Type",
                    "value": "application/json"
                  }
                ],
                "body": {
                  "mode": "raw",
                  "raw": "{\n  \"status\": \"completed\",\n  \"completed_at\": \"2025-10-08T17:45:00Z\",\n  \"metadata\": {\n    \"notes\": \"All 4 family members rescued successfully. No injuries. Relocated to temporary shelter.\",\n    \"lastUpdatedBy\": \"admin\",\n    \"outcome\": \"successful\",\n    \"evacuatedTo\": \"Central Evacuation Center\"\n  }\n}"
                },
                "url": {
                  "raw": "{{baseUrl}}/api/rescues/RESCUE_ID_FROM_STEP_1",
                  "host": ["{{baseUrl}}"],
                  "path": ["api", "rescues", "RESCUE_ID_FROM_STEP_1"]
                }
              }
            }
          ]
